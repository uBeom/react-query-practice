{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "dom", "dom.iterable"],
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "webpack", "public"]
}
